{
  "name": "inventare",
  "version": "0.0.1",
  "repository": "https://github.com/EduardoJM/school.git",
  "author": "Eduardo Oliveira <eduardo_y05@outlook.com>",
  "license": "MIT",
  "private": "true",
  "workspaces": {
    "packages": [
      "packages/**/*"
    ]
  },
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.1",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }  
}
